      <input required style="padding:5px" type="text" name="username" value="" placeholder="Username"> <br>
      <input required style="padding:5px" type="text" name="password" value="" placeholder="Create a Password"> <br> <br>
      <button type="submit" name="button"> Sign-up</button>
      </form>
      </div>
    </div>
  </div>
</div>
